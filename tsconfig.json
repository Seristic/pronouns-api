{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "jsx": "react-jsx", // or "react" if your TypeScript is old
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}